<Window x:Class="Exercise7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise7"
        mc:Ignorable="d"
        Title="Color ListView" Height="300" Width="300">
   
    <Grid>
        <ListView BorderThickness="1" BorderBrush="Black" Height="200" Width="250">
            <ListViewItem>
                <StackPanel Orientation="Horizontal">
                <Image Source="images/Red.png" Width="10" Margin="5"/>
                    <TextBlock>Red</TextBlock>    
                </StackPanel>
            </ListViewItem>

            <ListViewItem>
                <StackPanel Orientation="Horizontal">
                    <Image Source="images/Yellow.png" Width="10" Margin="5"/>
                    <TextBlock>Yellow</TextBlock>
                </StackPanel>
            </ListViewItem>
            <ListViewItem >
                <StackPanel Orientation="Horizontal">
                    <Image Source="images/Green.png" Width="10" Margin="5"/>
                    <TextBlock>Green</TextBlock>
                </StackPanel>
            </ListViewItem>
        </ListView>
    </Grid>
</Window>
