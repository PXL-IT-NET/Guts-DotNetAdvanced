<Window x:Class="Exercise7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise7"
        mc:Ignorable="d"
        Title="Color ListView" Height="300" Width="300">
    <Window.Resources>
        <Style TargetType="{x:Type Image}">
            <Setter Property="Width" Value="20"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <ListView Margin="20">
            <ListViewItem>
                <StackPanel Orientation="Horizontal">
                    <Image Source="images/red.png"></Image>
                    <TextBlock Text="Red"></TextBlock>
                </StackPanel>
            </ListViewItem>
            <ListViewItem>
                <StackPanel Orientation="Horizontal">
                    <Image Source="images/yellow.png"></Image>
                    <TextBlock Text="Yellow"></TextBlock>
                </StackPanel>
            </ListViewItem>
            <ListViewItem>
                <StackPanel Orientation="Horizontal">
                    <Image Source="images/green.png"></Image>
                    <TextBlock Text="Green"></TextBlock>
                </StackPanel>
            </ListViewItem>
        </ListView>
    </Grid>
</Window>
